{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Laptop Shop{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
<body>
{% block header %}
    <nav class="navbar navbar-expand-lg navbar-light border-bottom border-black bg-white sticky-top">
        <a href="{{ path('home') }}" class="navbar-brand btn btn-secondary btn-sm text-white" style="font-size:15px; margin-left:1%; margin-right:1%">
            Laptop Shop
        </a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                {% if app.request.get('_route') == 'home' %}
                <li class="nav-item active">
                {% else %}
                <li class="nav-item">
                {% endif %}
                    <a class="nav-link" style="font-size:15px" href="/">Home{% if app.request.get('_route') == 'home' %}<span class="sr-only">(current)</span>{% endif %}</a>
                </li>
                {% if app.request.get('_route') == 'best_sale' %}
                <li class="nav-item active">
                {% else %}
                <li class="nav-item">
                {% endif %}
                    <a class="nav-link" style="font-size:15px;" href="{{ path('best_sale') }}">Best sale{% if app.request.get('_route') == 'best_sale' %}<span class="sr-only">(current)</span>{% endif %}</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="font-size:15px;" href="#">Features</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="font-size:15px;" href="#">Pricing</a>
                </li>
                {% if app.request.get('_route') == 'contact_us' %}
                <li class="nav-item active">
                {% else %}
                <li class="nav-item">
                {% endif %}
                    <a class="nav-link" style="font-size:15px;" href="{{ path('contact_us') }}">Contact us{% if app.request.get('_route') == 'best_sale' %}<span class="sr-only">(current)</span>{% endif %}</a>
                </li>
            </ul>
            <a class="navbar-text" href="#" style="font-size:15px; margin-right:1%">
                <img src="https://scontent.fsgn2-1.fna.fbcdn.net/v/t1.6435-9/181477939_808387050082766_3680603534315624246_n.jpg?_nc_cat=105&ccb=1-5&_nc_sid=09cbfe&_nc_ohc=_JVKfGpwz7YAX8XaV1R&_nc_ht=scontent.fsgn2-1.fna&oh=00_AT-7VymXzdYWLFdi29w7c9bOdmuyuBBP45xOQeNmOMi0Rg&oe=624060D1" width="30" height="30" alt="" style="vertical-align: middle; border-radius: 50%;">
            </a>
            <a href={{path('user_info')}} style="margin-right:1%"> 
                <span class="navbar-text" style="font-size:15px; margin-right:1%; color:black">
                {{userName.username}}
            </span>
            </a>
            <a class="navbar-text" href="{{ path('cart') }}" style="font-size:15px; margin-right:1%">
                <img src="https://www.seekpng.com/png/full/72-724660_open-box-shipping-package-delivery-comments-box-icon.png" width="30" height="30" alt="" style="vertical-align: middle">
                {% if cart %}
                    {% if cart.items.count > 0 %}
                        <span style="position:absolute;width:14px; height:14px; border-radius:50%; background-color:red; margin-top:22px; transform:translateX(-10px); font-size:10px; text-align:center; color:white">{{cart.items.count}}</span>
                    {% endif %}
                {% endif %}
            </a>
        </div>
    </nav>
{% endblock %}

{% block body %}{% endblock %}
</body>
</html>